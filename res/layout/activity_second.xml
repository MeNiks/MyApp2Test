<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
  <TextView
        android:id="@+id/second_aim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Activity" />
    <TextView
        android:id="@+id/second_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <EditText
        android:id="@+id/second_et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="et_text"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/second_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/second_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/second_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/second_et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="phone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/second_et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="address"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/second_button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button1" />

    <Button
        android:id="@+id/second_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button2" />

</LinearLayout>